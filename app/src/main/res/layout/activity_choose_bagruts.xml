<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/board_bg"
    android:layoutDirection="rtl"
    tools:context=".userActivities.ChooseBagrutsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Main Content Container -->
        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- Screen Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/rpt_bold"
                android:gravity="center"
                android:text="اختيار المواضيع وامتحانات البجروت"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <!-- Mandatory Subjects Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewMandatory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#20222a"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Mandatory Subjects Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rpt_bold"
                        android:text="المواضيع الإلزامية"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Math Units -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rpt_bold"
                        android:text="رياضيات (وحدات)"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/rgMathUnits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:id="@+id/rbMath3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/rpt_bold" />

                        <RadioButton
                            android:id="@+id/rbMath4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="4"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/rpt_bold" />

                        <RadioButton
                            android:id="@+id/rbMath5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/rpt_bold" />
                    </RadioGroup>

                    <!-- Arabic Units -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rpt_bold"
                        android:text="عربي (وحدات)"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/rgArabicUnits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:id="@+id/rbArabic3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/rpt_bold" />

                        <RadioButton
                            android:id="@+id/rbArabic5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/rpt_bold" />
                    </RadioGroup>

                    <!-- Hebrew Units -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rpt_bold"
                        android:text="عبري (وحدات)"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/rgHebrewUnits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:id="@+id/rbHebrew3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/rpt_bold" />

                        <RadioButton
                            android:id="@+id/rbHebrew5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/rpt_bold" />
                    </RadioGroup>

                    <!-- English Units -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rpt_bold"
                        android:text="انجليزي (وحدات)"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/rgEnglishUnits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:id="@+id/rbEnglish3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/rpt_bold" />

                        <RadioButton
                            android:id="@+id/rbEnglish4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="4"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/rpt_bold" />

                        <RadioButton
                            android:id="@+id/rbEnglish5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/rpt_bold" />
                    </RadioGroup>


                    <!-- Religion Section -->
                    <LinearLayout
                        android:id="@+id/religionSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="نموذج الدين:"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:fontFamily="@font/rpt_bold"
                            android:layout_marginBottom="8dp" />

                        <RadioGroup
                            android:id="@+id/rgReligion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <RadioButton
                                android:id="@+id/rbIslam"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="دين اسلامي"
                                android:checked="true"
                                android:textColor="#FFFFFF"
                                android:fontFamily="@font/rpt_bold"/>

                            <RadioButton
                                android:id="@+id/rbChristian"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="دين مسيحي"
                                android:textColor="#FFFFFF"
                                android:fontFamily="@font/rpt_bold"/>

                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Majors Selection Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewMajors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#20222a"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rpt_bold"
                        android:text="المواضيع الاختيارية"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupMajors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="8dp"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Advanced Mode Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الوضع المتقدم"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/rpt_bold"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAdvancedMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <!-- Advanced Mode Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewAdvanced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#20222a"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rpt_bold"
                        android:text="الوضع المتقدم"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Exam List Container (will be populated dynamically) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewExamsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#20222a"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <!-- Dynamic exam list will be added here -->
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Save Selections Button -->
            <Button
                android:id="@+id/btnSaveSelections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حفظ الاختيارات"
                android:backgroundTint="@color/black"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/rpt_bold"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
