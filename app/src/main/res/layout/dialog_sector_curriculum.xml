<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="true"
    android:layout_margin="20dp"
    app:cardCornerRadius="40dp"
    android:layout_gravity="center"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_card_bg"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اختيار القطاع والمنهاج"
            android:textSize="20sp"
            android:fontFamily="@font/rpt_bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اختر القطاع:"
            android:textSize="16sp"
            android:fontFamily="@font/rpt_bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgDialogSector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbDialogArab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="عربي"
                android:textColor="@color/white"
                android:fontFamily="@font/rpt_bold"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbDialogDruze"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="درزي"
                android:textColor="@color/white"
                android:fontFamily="@font/rpt_bold"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اختر المنهاج لمواضيع المدنيات والتاريخ والدين:"
            android:textSize="16sp"
            android:fontFamily="@font/rpt_bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgDialogCurriculum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbDialogNewCurriculum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="منهاج جديد"
                android:textColor="@color/white"
                android:fontFamily="@font/rpt_bold"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbDialogOldCurriculum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="منهاج قديم"
                android:textColor="@color/white"
                android:fontFamily="@font/rpt_bold"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnConfirmSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تأكيد"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/rpt_bold"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView> 