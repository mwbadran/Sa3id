<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorDynamicAlpha">

    <LinearLayout
        android:id="@+id/noExtraTimeOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="56dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/no_extra_time"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="@font/rpt_bold"/>

        <ImageView
            android:id="@+id/noExtraTimeCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:id="@+id/extraTime25Option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="56dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/extra_time_25"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="@font/rpt_bold"/>

        <ImageView
            android:id="@+id/extraTime25Check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:id="@+id/extraTime33Option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="56dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/extra_time_33"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="@font/rpt_bold"/>

        <ImageView
            android:id="@+id/extraTime33Check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:id="@+id/extraTime50Option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="56dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/extra_time_50"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="@font/rpt_bold"/>

        <ImageView
            android:id="@+id/extraTime50Check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout> 