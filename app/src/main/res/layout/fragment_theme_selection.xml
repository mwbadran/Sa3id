<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorDynamicAlpha">

    <LinearLayout
        android:id="@+id/systemThemeOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="56dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/system_default"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="@font/rpt_bold"/>

        <ImageView
            android:id="@+id/systemThemeCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:id="@+id/lightThemeOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="56dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/light_theme"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="@font/rpt_bold"/>

        <ImageView
            android:id="@+id/lightThemeCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:id="@+id/darkThemeOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="56dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dark_theme"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="@font/rpt_bold"/>

        <ImageView
            android:id="@+id/darkThemeCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout> 